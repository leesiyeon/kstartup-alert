{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks"
  },
  "deploy": {
    "numReplicas": 1,
    "sleepApplication": false,
    "restartPolicyType": "always"
  },
  "cron": [
    {
      "command": "curl -X POST $RAILWAY_PUBLIC_DOMAIN/api/notifications/check",
      "schedule": "0 * * * *"
    }
  ]
}
